log                ${dname}/init.lammps

echo               both
dimension          ${ndim}
units              si
atom_style   hybrid  bond meso

# create simulation box
include            ${ndim}-vars.lmp

# create fluid particles
include            ${ndim}-lattice.lmp
create_atoms       1 region box

variable           xcenter equal 0.5*${Lx}
variable           ycenter equal 0.5*${Ly}
region             reg sphere  ${xcenter} ${ycenter} 0 ${rdroplet} units box
group              geg region reg
set                group geg type ${d_type}

mass               1  ${solvent_mass}
mass               2  ${polymer_mass}
mass               3  ${solvent_mass}

write_restart      poly3d.restart

