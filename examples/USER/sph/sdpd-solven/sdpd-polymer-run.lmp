echo               both
log                ${dname}/log.lammps
dimension          ${ndim}
units              si
atom_style         hybrid  bond meso
communicate        single vel yes
# create simulation box

#3D box
include            ${ndim}-vars.lmp
read_data          ${dname}/poly3d.txt

mass               * ${sdpd_mass}
set                group all meso_rho ${sdpd_rho}

pair_style         hybrid/overlay sdpd/rhosum 1 sdpd
pair_coeff         * * sdpd/rhosum   ${h}
pair_coeff         * * sdpd     ${sdpd_rho0} ${sdpd_c} ${sdpd_eta} ${h} ${sdpd_temp} ${sdpd_gamma} ${sdpd_background}

compute            rho_peratom all meso_rho/atom
compute            e_peratom all meso_e/atom
compute            ke_peratom all ke/atom
compute            esph all reduce sum c_e_peratom
compute            ke all ke
compute            sdpd_kin all temp
variable           etot equal c_ke+c_esph

fix                integrate_fix_full all meso

# "profile" corrected temperature
compute         pTemp all temp/profile 1 1 0 y 10
variable        nTemp equal c_pTemp*${kb}

# average velocity

include   velocity.lmp
include            stress.lmp

dump               dump_id all custom ${Nfreq} ${dname}/dump*.dat id type x y z vx vy vz c_rho_peratom
dump_modify        dump_id first yes
dump_modify        dump_id sort id
dump_modify        dump_id pad 8

thermo_style       custom step c_sdpd_kin v_nTemp
thermo_modify      norm no
thermo             100

#include            ${ndim}-image.lmp

variable           eps equal 0.25*${dx}
neighbor           ${eps} bin
variable           eps delete
neigh_modify       every 1
include            settimestep.lmp
timestep           ${dt}

restart 10000 ${dname}/sdpd.restart
run     200000
