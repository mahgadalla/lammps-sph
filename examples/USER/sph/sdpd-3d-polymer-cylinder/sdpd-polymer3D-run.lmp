echo               both
#variable           ndim string  3d
log                ${dname}/log.lammps
dimension          ${ndim}
units              si
atom_style         hybrid  bond meso
boundary           p p p
communicate        single vel yes
# create simulation box
#3D box
include            ${ndim}-vars.lmp
#region             box block 0.0 ${Lx}  0.0 ${Ly} 0.0 ${Lz} units box
read_data           poly3d.txt
group               flow type 1

special_bonds   lj 1 1 1
bond_style fene
bond_coeff 1 ${H} ${r0}  0 0

mass               * ${sdpd_mass}
set                group all meso_rho ${sdpd_rho}
# center of the cylinder
variable xcyl equal 0.5*${Lx}
variable ycyl equal 0.5*${Ly}

# driving force
variable fmod equal ${sdpd_mass}*100000


# coordinates of the rectangle
variable X0 equal ${xcyl}-${rcyl}
variable X1 equal ${xcyl}+${rcyl}
variable Y0 equal ${ycyl}-${rcyl}
variable Y1 equal ${ycyl}+${rcyl}

variable mask atom (x>${X0})*(x<${X1})*(y>${Y0})*(y<${Y1})
variable geomx atom (x>${xcyl})*(x<${X1})-(x<${xcyl})*(x>${X0})
variable geomy atom (y>${ycyl})*(y<${X1})-(y<${xcyl})*(y>${X0})
variable dfx atom ${fmod}*v_geomx*v_mask
variable dfy atom ${fmod}*v_geomy*v_mask

# a force to drive particles from the rectangul
fix drforce all addforce v_dfx v_dfy 0

# use Tait's EOS in combination with Morris' laminar viscosity.
# We set rho_0 = 1000 kg/m^3, c = 0.1 m/s, h = 6.5e-5 m.
# The dynamic viscosity is set to 1.0e-3 Pa s, corresponding to a kinematic viscosity of 1.0e-6 m^2/s
pair_style         hybrid/overlay sph/rhosum 1 sdpd
variable           sdpd_temp index 1e11
pair_coeff         * * sph/rhosum   ${h}
#pair_style          hybrid sdpd
pair_coeff         * * sdpd ${sdpd_rho} ${sdpd_c} ${sdpd_eta} ${h} ${sdpd_temp}

compute            rho_peratom all meso_rho/atom
compute            e_peratom all meso_e/atom
compute            ke_peratom all ke/atom
compute            esph all reduce sum c_e_peratom
compute            ke all ke
compute            sdpd_kin all temp

# do full time integration for shear driver and fluid, but keep walls stationary
fix                integrate_fix_full all meso
dump imgDump3 all image 100 image3.*.jpg type type atom yes bond atom 5e-6 adiam 1e-5 view 0 0 zoom 1.3  box yes 0.01
dump_modify        imgDump3 pad 9
thermo_style       custom step c_sdpd_kin
thermo_modify      norm no
thermo             100
neighbor           3.0e-6 bin
# drive particles away from the rectangle
run 3000

# remove force
unfix drforce

# create cylinder
region rvoid cylinder z ${xcyl} ${ycyl} ${rcyl} EDGE EDGE units box
lattice            sc ${dx}
create_atoms ${w} region rvoid
group gvoid type ${w}
fix nvoid gvoid setforce 0 0 0

# add body force
variable bodyfx atom mass*${gx}
fix body_force flow addforce v_bodyfx 0.0 0.0 

# average velocity
#compute vxav all reduce ave vx
#variable  vx_cm atom vx-c_vxav
#fix av_vx all ave/spatial 1 ${Nfreq} ${Nfreq} &
#y center 0.01 v_vx_cm file vx.av ave running units reduced

dump               dump_id all custom 10 dump*.dat id type x y z vx vy vz c_rho_peratom
dump_modify        dump_id first yes
dump_modify        dump_id sort id
dump_modify        dump_id pad 8

thermo_style       custom step c_sdpd_kin
thermo_modify      norm no
thermo             100

dump imgDump all image 10 image.*.jpg type type atom yes bond atom 5e-6 adiam 1e-5 view 0 0 zoom 1.3  box yes 0.01
dump_modify        imgDump pad 9
#dump imgDump2 all image 10 image2.*.jpg type type atom yes bond atom 5e-6 adiam 1e-5 view 30 60 zoom 1.3  box yes 0.01
#dump_modify        imgDump2 pad 9

neighbor           3.0e-6 bin
include            settimestep.lmp
timestep           ${dt}
run                1000000
